<style type="text/css">
    .form-control{
        height: 28px;
        padding: 3px;
        font-size: 14px;
        vertical-align: middle;
    }
    .modal-footer{
        text-align:center;
        margin: auto;
        padding:10px 10px;
    } 
    .modal-footer button{
        padding: 5px 10px;
        width: 70px;
        height: 28px;
        line-height: 15px;
    }
</style>
<div class="modal-dialog" style="margin-top: 10%">
    <div class="modal-content" style="width:80%;margin:0 auto">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">教研室信息编辑</h4>
        </div>
        <div class="modal-body" >
            <form id="myform">
                <input id="ID" name="ID" type="hidden" class="form-control" value="<%= id %>">
                <div class="box-body">
                    <div class="form-group">
                        <label>教研室编号</label>
                        <input id="JYSBH" name="JYSBH" type="text" class="form-control" value="<%= jysbh %>">
                    </div>
                    <div class="form-group">
                        <label>教研室名称</label>
                        <input id="JYSMC" name="JYSMC" type="text" class="form-control" value="<%= jysmc %>">
                    </div>
                    <div class="form-group">
                        <label>教研室主任</label>
                        <input id="JYSZR" name="JYSZR" type="text" class="form-control" value="<%= jyszr %>">
                    </div>
                </div>
                <!-- /.box-body -->
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            <button type="button" class="btn btn-primary" onclick="submitForm()">提交</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal -->
<script>
    function submitForm() {
        var verge = true;
        if ($('#JYSBH').val() == "") {
            alert("教研室编号不能为空");
            var verge = false;
        } else if ($('#JYSMC').val() == "") {
            alert("教研室名称不能为空");
            var verge = false;
        } else if ($('#JYSZR').val() == "") {
            alert("教研室主任不能为空");
            var verge = false;
        }
        if (verge) {
            $.ajax({
                type: "post",
                url: '/jys/_editJys.html',
                dataType: "json",
                data: $('#myform').serialize(),// 你的formid 注：后台req.body由控件name获取数据
                async: false,
                cache: true,
                success: function (msg) {
                    if (msg.result != 0) {
                        $("#modal-edit-event").modal('hide');
                    }
                    location.reload();
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }
</script>