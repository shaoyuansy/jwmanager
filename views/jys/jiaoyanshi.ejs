<div class="modal" id="modal-edit-event"></div>
<script>
    var mytable;

    $(document).ready(function () {
        //全选  全反选处理
        $("#checkbox1").click(function (){
            var checkbox = document.getElementById('checkbox1');
            //是否被选中
            if(checkbox.checked){
                $('input[type="checkbox"][name="checkbox2"]').each(function () {
                    this.checked = true;
                });
            }else{
                $('input[type="checkbox"][name="checkbox2"]').each(function () {
                    this.checked = false;
                });
            }
        });

        var columns = [
            {
                "mData": null,
                "sClass": "center",
                "mData": function (obj) {
                    return '<input id="checkbox2" name="checkbox2" type="checkbox" value='+obj.ID+'>';
                }
            },
            {
                "mData": "JYSBH",
                "sClass": "center"
            },
            {
                "mData": "JYSMC",
                "sClass": "center"
            },
            {
                "mData": "JYSZR",
                "sClass": "center"
            },
            {
                "mData": null,
                "sClass": "center",
                "mData": function (obj) {
                    return '<a style="margin-left: 10px;" onclick="editJys(\'' + obj.ID + '\')" href="#" role="button" data-toggle="modal" title="编辑"><i class="fa fa-fw fa-pencil"></i></a>'
                            +'<a style="margin-left: 10px;" onclick="delJys(\'' + obj.ID + '\')" href="#" role="button" data-toggle="modal" title="删除"><i class="fa fa-fw fa-trash-o"></i></a>';
                }
            }
        ];
        mytable = CreateDataTable('#datatable', '/jysService/getList', columns);
    });

    //编辑
    function editJys(id) {
        $.ajax({
            url: "/jys/_editJys.html?id=" + id,
            type: "get",
            dataType: 'html',
            async: false,
            success: function (htmlContent) {
                //模态框
                $('#modal-edit-event').html(htmlContent);
                $("#modal-edit-event").modal('show');
            }
        });
    }
    //删除记录
    function delJys(ID) {
        var result = confirm("确认要删除？");
        if (result) {
            $.ajax({
                type: "get",
                url: '/jysService/delOne',
                dataType: "json",
                data: {ID: ID},
                cache: true,
                success: function (msg) {
                    if (msg.state == 1) {
                        alert("删除成功");
                    }
                    location.reload();
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }

    //批量删除记录
    function delSomeJys() {
        var flag = false;
        var arr = new Array();
        //遍历所有checkbox
        $('input[type="checkbox"][name="checkbox2"]:checked').each(function () {
            arr.push(this.value);
        });
        if(arr.length != 0){
            var result = confirm("确认要删除这些数据？");
            if (result) {
                //数组转字符串 ，拼接
                var idstr = arr.join(",");
                $.ajax({
                    type: "get",
                    url: '/jysService/delSome',
                    dataType: "string",
                    data: {idstr: idstr},
                    cache: true,
                    success: function (msg) {
                        location.reload();
                    },
                    error: function (e) {
                        console.log(e);
                        location.reload();
                    }
                });
            }
        }else{
            alert("请至少选择一项");
        }
    }
    //批量导出
    function exportData() {
        //遍历所有checkbox,未选中选项设置class为noExl
        $('input[type="checkbox"][name="checkbox2"]').each(function () {
            if(this.checked == false){
                alert(this.parentNode.parentNode.classList = "noExl");
            }

        });
        $("#datatable").table2excel({
            exclude: ".noExl",//有class = “noExl” 的行不被导出；
            name: "Excel Document Name",
            filename: "myFileName",
            exclude_img: true,
            exclude_links: true,
            exclude_inputs: true
        });
    }

</script>