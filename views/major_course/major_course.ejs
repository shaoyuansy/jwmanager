        var nowMonth = nowDate.getMonth() + 1;
        if (nowMonth >= 8 && nowMonth <= 12) {
            var xuenian1 = nowYear + "级";
            var xuenian2 = nowYear - 1 + "级";
            var xuenian3 = nowYear - 2 + "级";
            var xuenian4 = nowYear - 3 + "级";
