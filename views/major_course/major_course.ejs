                "mData": function (obj) {
                    return '<a style="margin-left: 10px;" onclick="delMajorCourse(\'' + obj.ZKID + '\')" href="#" role="button" data-toggle="modal" title="删除"><i class="fa fa-fw fa-trash-o"></i></a>';
                }
            }
        ];
        //获取需要查询的开设年级和专业名称
        var sqlstr = "<%= sqlStr %>";
        //判断开设年级和专业名称是否为空
        if("<%= sqlStr %>" == ""){
            sqlstr = tempStr;
            var h = document.getElementById("h3");
            h.innerHTML = sqlstr.replace(",","-")+"专业 课程信息";
        }
        mytable = CreateDataTable('#datatable', "/major_courseService/getList?sqlstr="+sqlstr, columns);
    }
    //跳转到添加课程页面
    function insert(str){
        var temp = str;
        if(str == ""){
            temp = tempStr;
        }
        window.location.href="/major_course/addCourse.html?data="+temp;
    }

    //删除记录
    function delMajorCourse(ID) {
        var result = confirm("确认要删除？");
        if (result) {
            $.ajax({
                type: "get",
                url: '/major_courseService/delOne',
                dataType: "json",
                data: {ID: ID},
                cache: true,
                success: function (msg) {
                    if (msg.state == 1) {
                        alert("删除成功");
                    }
                    location.reload();
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }

    //批量删除记录
    function delSome() {
        var flag = false;
        var arr = new Array();
        //遍历所有checkbox
        $('input[type="checkbox"][name="checkbox2"]:checked').each(function () {
            arr.push(this.value);
        });
        if(arr.length != 0){
            var result = confirm("确认要删除这些数据？");
            if (result) {
                //数组转字符串 ，拼接
                var idstr = arr.join(",");
                $.ajax({
                    type: "get",
                    url: '/major_courseService/delSome',
                    dataType: "json",
                    data: {idstr: idstr},
                    cache: true,
                    success: function (msg) {
                        if (msg.state == 1) {
                            alert("删除成功");
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
                location.reload();
            }
        }else{
            alert("请至少选择一项");
        }
    }
</script>