<link rel="stylesheet" href="/css/major_course.css">

<div class="content-wrapper">
    <section class="content-header">
        <h1>专业-课程管理</h1>
        <ol class="breadcrumb">
            <li><a href="/index"><i class="fa fa-home"></i> 首页</a></li>
            <li class="active">专业-课程管理</li>
        </ol>
    </section>
    <section class="content">
        <div class="row"> 
            <div class="col-md-12 col-sm-12"> 
                <div class="box box-default box-solid ">
                    <div class="box-header with-border" style="padding:5px 10px 5px 10px;font-size:14px;">
                        <h3 class="box-title" style="font-size:14px;">时间</h3>
                        <div class="box-tools pull-right" style="top: 1px;">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row" style="margin-left:0px;margin-right:0px"> 
                            <div class="times col-md-4 col-sm-12">
                                <div class="input-group date" id="datechoose" >
                                    <input type="text" class="form-control">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-th"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-12 tags">
                                <p>注：根据时间选择本页学期与专业。</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="mymenus" class="col-md-2 col-sm-12"></div>
            <div class="col-md-10 col-sm-12">
                <div class="box">
                    <div class="box-header">
                        <h6 id="h3" class="box-title" style="font-size: 16px;"></h6>
                        <div class="box-tools pull-right">
                            <div class="upload_group">
                                <input type="file" id="upfile" accept=".xls,.xlsx" />
                                <input type="text" class="style_upload" placeholder=" 仅支持xls格式" readonly/>
                                <label for="upfile" class="open">浏览</label>
                            </div>
                            <button type="button" title="导入" class="btn btn-box-tool" onclick="ReadExcel();">
                                <i class="fa fa-fw fa-sign-in"></i>导入
                            </button>
                            <button type="button" title="导出" class="btn btn-box-tool" onclick="toExcel();">
                                <i class="fa fa-fw fa-cloud-download"></i>导出
                            </button>
                            <button type="button" title="批量删除" class="btn btn-box-tool" onclick="delSome();">
                                <i class="fa fa-fw fa-times"></i>批量删除
                            </button>
                            <button type="button" title="添加" class="btn btn-box-tool" onclick="insert()">
                                <i class="fa fa-fw fa-plus-circle"></i>添加课程
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="datatable" class="table table-bordered table-striped" style="overflow-x: scroll;">
                            <thead>
                                <tr>
                                    <th><input id="chenkall" name="chenkall" type="checkbox"></th>
                                    <th>专业编号</th>
                                    <th>专业名称</th>
                                    <th>开设年级</th>
                                    <th>开设学期</th>
                                    <th>课程负责人</th>
                                    <th>课程编号</th>
                                    <th>课程名称</th>
                                    <th>班级个数</th>
                                    <th>各班大约人数</th>
                                    <th>教研室划分</th>
                                    <th>专业负责人</th>
                                    <th>课程名称(英文)</th>
                                    <th>课程类型</th>
                                    <th>周学时</th>
                                    <th>上机学时</th>
                                    <th>学分</th>
                                    <th>适用对象</th>
                                    <th>先导课程</th>
                                    <th>后续课程</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<div class="modal fade" id="edit_term" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="margin-top: 200px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">专业-课程信息编辑</h4>
            </div>
            <div class="modal-body">
                <form id="edit_form">
                    <div class="box-body">
                        <div class="form-group">
                            <label>课程名称</label>
                            <input id="TEMPKCMC" class="form-control" readonly />
                            <input id="TEMPZKID" type="hidden" />
                            <input id="TEMPZYID" type="hidden" />
                            <input id="TEMPKCID" type="hidden" />
                        </div>
                        <div class="form-group">
                            <label>开设学期</label>
                            <select class="form-control" id="TEMPKSXQ">
                                <option>第一学期</option>
                                <option>第二学期</option>
                                <option>第三学期</option>
                                <option>第四学期</option>
                                <option>第五学期</option>
                                <option>第六学期</option>
                                <option>第七学期</option>
                                <option>第八学期</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" onclick="submitEdit()">提交</button>
            </div>
        </div>
    </div>
</div>

<script src="/javascripts/mydatatable.js"></script>
<script src="/table2excel/jquery.table2excel.js"></script>
<script src="/javascripts/major_course.js"></script>