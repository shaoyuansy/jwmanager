    //获取该年级该专业已选课程ID
    function getKcId(data){
        var temp = new Array();
        var idstr = new Array();
        getZyId(data);
        $.ajax({
            type: "get",
            url: "/major_courseService/getList?sqlstr="+data,
            dataType: "json",
            async: false,
            cache: true,
            success: function (msg) {
                temp = msg;
            },
            error: function (e) {
                console.log(e);
            }
        });
        var result = temp.aaData;
        for(var i = 0;i<result.length;i++){
            idstr.push(result[i].KCID);
        }
        //若该年级该专业目前还没有课程，返回''
        if(idstr.join(",") == ""){
            return "''";
        }
        return idstr.join(",");
    }
    //由年级和专业获取专业ID
    function getZyId(data){
        var temp2 = [];
        $.ajax({
            type: "get",
            url: "/major/_getZyId.html?sqlStr="+data,
            dataType: "json",
            async: false,
            cache: true,
            success: function (msg) {
                temp2 = msg;
            },
            error: function (e) {
                console.log(e);
            }
        });
        var result = temp2.result;
        zyid = result[0].ID;
    }
    //为该年级该专业添加课程
    function addCourse(){
        var flag = false;
        var arr = [];
        $('input[type="checkbox"][name="checkbox2"]:checked').each(function () {
            flag = true;
            arr.push(zyid+","+this.value+","+$("#ksxq").val());
        });
        for(var i = 0;i<arr.length;i++){
            var str = arr[i];
            console.log("str:"+str);
            $.ajax({
                type: "get",
                url: '/major_courseService/insertSome',
                dataType: "json",
                data: {str: str},
                cache: false,
                async:false,//同步
                success: function (result) {

                },
                error: function (e) {
                    alert("出错了");
                    console.log(e);
                }
            });
        }
        if(flag){
            var arr3 = "<%= sqlStr %>".split(",");
            //返回上一页并刷新
            window.location.href="/major_course/getData.html?ksnj="+arr3[0]+"&zymc="+arr3[1];
        }else if(!flag){
            alert("请至少选择一项");
        }
    }

