<link rel="stylesheet" href="/css/teacher.css">

<div class="content-wrapper">
    <section class="content-header">
        <h1>教师信息管理</h1>
        <ol class="breadcrumb">
            <li><a href="/index"><i class="fa fa-home"></i> 首页</a></li>
            <li class="active">教师信息管理</li>
        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">教师信息管理列表</h3>
                <div class="box-tools pull-right ">
                    <div class="upload_group">
                        <input type="file" id="upfile" accept=".xls" />
                        <input type="text" class="style_upload" placeholder=" 仅支持xls格式" readonly/>
                        <label for="upfile" class="open">浏览</label>
                    </div>
                    <button type="button" title="导入" class="btn btn-box-tool" onclick="readExcel();">
                        <i class="fa fa-fw fa-sign-in"></i>导入
                    </button>
                    <button type="button" title="导出" class="btn btn-box-tool" onclick="exportData()">
                        <i class="fa fa-fw fa-cloud-download"></i>导出
                    </button>
                    <button type="button" title="批量删除" class="btn btn-box-tool" onclick="delSomeTeacher()">
                        <i class="fa fa-fw fa-times"></i>批量删除
                    </button>
                    <button type="button" title="添加" class="btn btn-box-tool" onclick="editTeacher(0)">
                        <i class="fa fa-fw fa-plus-circle"></i>添加
                    </button>
                </div>
                <div class="box box-default box-solid">
                    <div class="box-header with-border">
                        <h3 class="box-title" style="font-size:14px;">当前显示的列</h3>
                        <div class="box-tools pull-right " style="top: 3px">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="1"> # |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="2"> 姓名 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="3"> 工号 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="4"> 是否专任 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="5"> 联系电话 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="6"> 分管负责人 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="7"> 专业技术职称 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="8"> 学历 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="9"> 最高学位 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="10"> 学科类别 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="11"> 导师类型 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="12"> 单位名称 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="13"> 教学效果 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="14"> 是否上交证件 |</span>
                    </div>
                </div>
            </div>
            <div class="box-body">
                <table id="datatable" class="table table-bordered table-striped" width="100%">
                    <thead>
                        <tr>
                            <th><input id="checkall" name="checkall" type="checkbox"></th>
                            <th>#</th>
                            <th>姓名</th>
                            <th>工号</th>
                            <th>是否专任</th>
                            <th>联系电话</th>
                            <th>分管负责人</th>
                            <th>专业技术职称</th>
                            <th>学历</th>
                            <th>最高学位</th>
                            <th>学科类别</th>
                            <th>导师类型</th>
                            <th>单位名称</th>
                            <th>教学效果</th>
                            <th>是否上交证件</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<div class="modal" id="edit-teacher-modal"></div>

<script src="/javascripts/mydatatable.js"></script>
<script src="/table2excel/jquery.table2excel.js"></script>
<script src="/javascripts/teacher.js"></script>
