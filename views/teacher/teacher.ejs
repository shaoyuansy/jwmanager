                "sClass": "center"
            },
            {
                "mData": "FGFZR",
                "sClass": "center"
            },
            {
                "mData": "ZYJSZC",
                "sClass": "center"
            },
            {
                "mData": "XL",
                "sClass": "center"
            },
            {
                "mData": "ZGXW",
                "sClass": "center"
            },
            {
                "mData": "XKLB",
                "sClass": "center"
            },
            {
                "mData": "DSLX",
                "sClass": "center"
            },
            {
                "mData": "DWMC",
                "sClass": "center"
            },
            {
                "mData": "JXXG",
                "sClass": "center"
            },
            {
                "mData": "FJ",
                "sClass": "center"
            },
            {
                "mData": null,
                "sClass": "center",
                "mData": function (obj) {
                    return '<a style="margin-left: 10px;" onclick="editTeacher(\'' + obj.ID + '\')" href="#" role="button" data-toggle="modal" title="编辑"><i class="fa fa-fw fa-pencil"></i></a>'
                            +'<a style="margin-left: 10px;" onclick="delTeacher(\'' + obj.ID + '\')" role="button" data-toggle="modal" title="删除"><i class="fa fa-fw fa-trash-o"></i></a>';
                }
            }
        ];
        mytable = CreateDataTable('#datatable', '/teacherService/getList', columns);
    });
    //编辑
    function editTeacher(id) {
        $.ajax({
            url: "/teacher/_editTeacher.html?id=" + id,
            type: "get",
            dataType: 'html',
            async: false,
            success: function (htmlContent) {
                //模态框
                $('#modal-edit-event').html(htmlContent);
                $("#modal-edit-event").modal('show');
            }
        });
    }
    //删除记录
    function delTeacher(ID) {
        var result = confirm("确认要删除？");
        if (result) {
            $.ajax({
                type: "get",
                url: '/teacherService/delOne',
                dataType: "json",
                data: {ID: ID},
                cache: true,
                success: function (msg) {
                    if (msg.state == 1) {
                        alert("删除成功");
                    }
                    location.reload();
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }
    //批量删除记录
    function delSomeTeacher() {
        var flag = false;
        var arr = new Array();
        //遍历所有checkbox
        $('input[type="checkbox"][name="checkbox2"]:checked').each(function () {
            arr.push(this.value);
        });
        if(arr.length != 0){
            var result = confirm("确认要删除这些数据？");
            if (result) {
                //数组转字符串 ，拼接
                var idstr = arr.join(",");
                $.ajax({
                    type: "get",
                    url: '/teacherService/delSome',
                    dataType: "json",
                    data: {idstr: idstr},
                    cache: true,
                    success: function (msg){
                        if(msg.result != 0){
                            alert("删除成功！");

                        }else {
                            alert("删除失败！");
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
                location.reload();
            }
        }else{
            alert("请至少选择一项");
        }
    }

    //批量导出
    function exportData() {
        //定义一个flag判断存在单选框被选中
        var flag = false;
        //遍历所有checkbox,未选中选项所在行设置class为noExl
        $('input[type="checkbox"][name="checkbox2"]').each(function () {
            if(this.checked == false){
                //设置该checkbox所在行的class属性为noExl
                this.parentNode.parentNode.classList = "noExl";
            }else if(this.checked == true){
                flag = true;
            }
        });
        if(flag){
            $("#datatable").table2excel({
                exclude: ".noExl",//有class = “noExl” 的行不被导出；
                name: "Excel Document Name",
                filename: "教师信息表",
                exclude_img: true,
                exclude_links: true,
                exclude_inputs: true
            });
        }else{
            alert("请至少选择一项");
        }
    }
</script>

