        mytable = CreateDataTable('#datatable', '/assignService/assignList', columns);

        //初始化当前显示列的checkbox判断是否选中
        $('input[type="checkbox"][name="checkbox3"]').each(function () {
            // Get the column API object
            var column = $("#datatable").DataTable().column( $(this).val() );
            // Toggle the visibility
            this.checked = column.visible();
        });

        $('input[type="checkbox"][name="checkbox3"]').change( function () {
            // Get the column API object
            var column = $("#datatable").DataTable().column( $(this).val() );
            // Toggle the visibility
            column.visible( ! column.visible() );
        });

    });

    //编辑
    function editAssign(id) {
        $.ajax({
            url: "/assigncourse/_editAssign.html?id=" + id,
            type: "get",
            dataType: 'html',
            async: false,
            success: function (htmlContent) {
                //模态框
                $('#modal-edit-event').html(htmlContent);
                $("#modal-edit-event").modal('show');
            }
        });
    }

    //删除记录
    function delAssign(ID) {
        var result = confirm("确认要删除？");
        if (result) {
            $.ajax({
                type: "get",
                url: '/assignService/delOne',
                dataType: "json",
                data: {ID: ID},
                cache: true,
                success: function (msg) {
                    if (msg.state == 1) {
                        alert("删除成功");
                    }else{
                        alert("删除失败");
                    }
                    location.reload();
                },
                error: function (e) {
                    console.log(e);
                }
            });
        }
    }
    //批量删除记录
    function delSomeAssign() {
        var flag = false;
        var arr = new Array();
        //遍历所有checkbox
        $('input[type="checkbox"][name="checkbox2"]:checked').each(function () {
            arr.push(this.value);
        });
        if(arr.length != 0){
            var result = confirm("确认要删除这些数据？");
            if (result) {
                //数组转字符串 ，拼接
                var idstr = arr.join(",");
                $.ajax({
                    type: "get",
                    url: '/assignService/delSome',
                    dataType: "json",
                    data: {idstr: idstr},
                    cache: true,
                    success: function (msg){
                        if(msg.result != 0){
                            alert("删除成功！");

                        }else {
                            alert("删除失败！");
                        }
                    },
                    error: function (e) {
                        console.log(e);
                    }
                });
                location.reload();
            }
        }else{
            alert("请至少选择一项");
        }
    }

</script>

