    }

    //批量删除记录
    function delSomeJys() {
        var flag = false;
        var arr = new Array();
        $('input[type="checkbox"][name="checkrow"]:checked').each(function () {
            arr.push(this.value);
        });
        if (arr.length != 0) {
            var idstr = arr.join(",");
            delMajorCourse(idstr);
            $.ajax({
                type: "post",
                url: '/courseService/delSome',
                dataType: "json",
                data: {idstr: idstr},
                cache: true,
                success: function (msg) {
                    if (msg.state == 1) {
                        var table = $('#datatable').DataTable();
