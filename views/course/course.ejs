    //删除记录
    function delCourse(ID) {
        delMajorCourse(ID);
        delSelectCourse(ID);
        $.ajax({
            type: "post",
            url: '/courseService/delOne',
            dataType: "json",
            data: {ID: ID},
            cache: true,
            success: function (msg) {
                if (msg.state == 1) {
                    var table = $('#datatable').DataTable();
                    table.ajax.reload();
                    table.draw();		
                    $("#success_modal").modal();
