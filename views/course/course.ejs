<link rel="stylesheet" href="/css/course.css">

<div class="content-wrapper">
    <section class="content-header">
        <h1>课程管理</h1>
        <ol class="breadcrumb">
            <li><a href="/index"><i class="fa fa-home"></i> 首页</a></li>
            <li class="active">课程管理</li>
        </ol>
    </section>
    <section class="content">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">课程列表</h3>
                <div class="box-tools pull-right">
                    <div class="upload_group">
                        <input type="file" id="upfile" accept=".xls" />
                        <input type="text" class="style_upload" placeholder=" 仅支持xls格式" readonly/>
                        <label for="upfile" class="open">浏览</label>
                    </div>
                    <button type="button" title="导入" class="btn btn-box-tool" onclick="readExcel();">
                        <i class="fa fa-fw fa-sign-in"></i>导入
                    </button>
                    <button type="button" title="导出" class="btn btn-box-tool" onclick="toExcel();">
                        <i class="fa fa-fw fa-cloud-download"></i>导出
                    </button>
                    <button type="button" title="批量删除" class="btn btn-box-tool" onclick="delSomeJys();">
                        <i class="fa fa-fw fa-times"></i>批量删除
                    </button>
                    <button type="button" title="添加" class="btn btn-box-tool" onclick="editCourse('')">
                        <i class="fa fa-fw fa-plus-circle"></i>添加
                    </button>
                </div>
                <div class="box box-default box-solid" style="margin-top:10px;">
                    <div class="box-header with-border" style="padding:3px;font-size:14px;">
                        <h3 class="box-title" style="font-size:14px;">当前显示的列</h3>
                        <div class="box-tools pull-right" style="top: 1px;">
                            <button type="button" style="padding:0px;line-height:0px" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="box-body">
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="1"> 课程编号 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="2"> 课程名称 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="3"> 课程英文名称 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="4"> 教研室划分 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="5"> 专业负责人 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="6"> 课程负责人 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="7"> 课程类型 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="8"> 周学时 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="9"> 上机学时 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="10"> 学分 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="11"> 适用对象 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="12"> 先导课程 |</span>
                        <span><input id="checkshow" name="checkshow" type="checkbox" value="13"> 后续课程 |</span>
                    </div>
                </div>
            </div>
            <div class="box-body" style="padding-top: 0">
                <table id="datatable" class="table table-bordered table-striped" width="100%">
                    <thead>
                        <tr>
                            <th><input id="checkall" name="checkall" type="checkbox"></th>
                            <th>课程编号</th>
                            <th>课程名称</th>
                            <th>课程英文名称</th>
                            <th>教研室划分</th>
                            <th>专业负责人</th>
                            <th>课程负责人</th>
                            <th>课程类型</th>
                            <th>周学时</th>
                            <th>上机学时</th>
                            <th>学分</th>
                            <th>适用对象</th>
                            <th>先导课程</th>
                            <th>后续课程</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </section>
</div>

<div class="modal" id="modal-edit-event"></div>

<script src="/javascripts/mydatatable.js"></script>
<script src="/table2excel/jquery.table2excel.js"></script>
<script src="/javascripts/course.js"></script>
